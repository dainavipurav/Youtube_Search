<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewCustomItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutCustomItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/material_dimen_ldpi">

        <ImageView
            android:id="@+id/imageviewCustomItemLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/splash_theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="4:2"
            app:layout_constraintEnd_toStartOf="@id/textviewCustomItemLayoutHeading"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textviewCustomItemLayoutHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_dimen_mdpi"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/imageviewCustomItemLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textviewCustomItemLayoutChannel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_dimen_mdpi"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:ellipsize="end"
            app:layout_constraintBottom_toTopOf="@id/textviewCustomItemLayoutViews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/imageviewCustomItemLayout"
            app:layout_constraintTop_toBottomOf="@id/textviewCustomItemLayoutHeading" />

        <TextView
            android:id="@+id/textviewCustomItemLayoutViews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/material_dimen_mdpi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageviewCustomItemLayout"
            app:layout_constraintTop_toBottomOf="@id/textviewCustomItemLayoutChannel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>